{# Layout 3: Minimalist Concert Hall Program - Clean and Structured #}

<main class="program-layout3">
  <div class="program-container">
    <header class="program-header">
      <div class="venue-info">{{ concertLocation }}</div>
      <h1 class="program-title">Concert Programme</h1>
      <div class="concert-details">
        <span class="concert-date">{{ concertDate }}</span>
        <span class="detail-separator">|</span>
        <span class="concert-time">{{ concertTime }}</span>
      </div>
    </header>

    {% macro ensembleSection(title, director, songs, performers) %}
      <article class="performance-block">
        <header class="performance-header">
          <h2 class="ensemble-name">{{ title }}</h2>
          <div class="conductor-name">{{ director }}, conductor</div>
        </header>

        <div class="repertoire">
          {% for song in songs %}
            <div class="piece">
              <div class="piece-title">{{ song.title }}</div>
              <div class="piece-composer">
                {{ song.composer }}
                {% if song.arranger %}
                  <span class="arrangement-info">/ arr. {{ song.arranger }}</span>
                {% endif %}
              </div>
            </div>
          {% else %}
            <div class="piece-tba">To be announced</div>
          {% endfor %}
        </div>

        <details class="performers-details">
          <summary class="performers-toggle">View performers</summary>
          <div class="performers-grid">
            {% set allPerformers = performers | mergeAllPerformers(songs) %}
            {% for instrument, players in allPerformers %}
              <div class="instrument-group">
                <h4 class="instrument-heading">{{ instrument }}</h4>
                <ul class="performer-list">
                  {% for player in players %}
                    <li class="performer-item">
                      {{ player.name }}{% if player.gradYear %} ({{ player.gradYear }}){% endif %}
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endfor %}
          </div>
        </details>
      </article>
    {% endmacro %}

    {{ ensembleSection(symphonic.title, symphonic.director, symphonic.songs, symphonic.performers) }}

    <div class="interval">
      <hr class="interval-line">
      <span class="interval-text">Interval</span>
      <hr class="interval-line">
    </div>

    {{ ensembleSection(jazz1.title, jazz1.director, jazz1.songs, jazz1.performers) }}

    {{ ensembleSection(jazz2.title, jazz2.director, jazz2.songs, jazz2.performers) }}

    <article class="performance-block">
      <header class="performance-header">
        <h2 class="ensemble-name">{{ jazz3.title }}</h2>
      </header>
      <div class="repertoire">
        {% for song in jazz3.songs %}
          <div class="piece">
            <div class="piece-title">{{ song.title }}</div>
            <div class="piece-composer">
              {{ song.composer }}
              {% if song.arranger %}
                <span class="arrangement-info">/ arr. {{ song.arranger }}</span>
              {% endif %}
            </div>
          </div>
        {% else %}
          <div class="piece-tba">To be announced</div>
        {% endfor %}
      </div>
    </article>
  </div>
</main>

<style>
