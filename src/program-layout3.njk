    }
    .program-layout3 {
      margin: 0;
    }
    .program-container {
      box-shadow: none;
      padding: 1rem;
    }
    .performers-details {
      display: block !important;
    }
    .performers-toggle {
      display: none;
    }
    .performers-details[open] .performers-grid,
    .performers-grid {
      display: grid !important;
    }
  }

  .program-layout3 {
