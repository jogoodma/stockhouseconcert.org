    color: #444;
  }

  .performer-list {
    list-style: none;
    padding: 0;
    margin: 0;
    line-height: 1.6;
  }

  .performer-item {
    color: #555;
  }

  .grad-year {
    color: #999;
    font-size: 0.85em;
  }

  .interval {
    display: flex;
    align-items: center;
    margin: 3rem 0;
    gap: 1.5rem;
  }

  .interval-line {
    flex: 1;
    border: none;
    border-top: 1px solid #ccc;
    margin: 0;
  }

  .interval-text {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #666;
    font-weight: 500;
  }
</style>

<script>
  // For print: expand all details elements
  window.addEventListener('beforeprint', () => {
    document.querySelectorAll('.performers-details').forEach(el => {
      el.setAttribute('open', '');
    });
  });
</script>
