---

<!-- Tabbed Section Macro -->
{% macro tabbedSection(title, director, songs, performers, sectionId) %}
  <section style="margin-bottom: 2.5rem;">
    <h2 style="font-size: 1.7rem; font-weight: bold; text-align: center; margin-bottom: 0.5rem;">{{ title }}</h2>
    <div style="text-align: center; font-style: italic; margin-bottom: 1.5rem;">
      Directed by {{ director }}
    </div>
    <div id="tabs-{{ sectionId }}" style="max-width: 600px; margin: 0 auto;">
      <div style="display: flex; justify-content: center; margin-bottom: 1.5rem;">
        <button type="button" class="tab-btn" onclick="showTab('{{ sectionId }}', 'program')" id="tab-{{ sectionId }}-program" aria-selected="true" style="padding: 0.5rem 1.5rem; border: none; background: #bfa76a; color: #fff; font-weight: bold; border-radius: 1rem 0 0 1rem; cursor: pointer;">Program</button>
        <button type="button" class="tab-btn" onclick="showTab('{{ sectionId }}', 'performers')" id="tab-{{ sectionId }}-performers" aria-selected="false" style="padding: 0.5rem 1.5rem; border: none; background: #eee; color: #333; font-weight: bold; border-radius: 0 1rem 1rem 0; cursor: pointer;">Performers</button>
      </div>
      <div id="tab-content-{{ sectionId }}-program">
        <ul style="list-style: none; padding: 0; margin: 0;">
          {% for song in songs %}
            <li style="margin-bottom: 1.5rem;">
              <div style="font-size: 1.15rem; font-weight: 500; text-align: center;">{{ song.title }}</div>
              <div style="font-size: 1rem; text-align: center; color: #555;">
                {{ song.composer }}
                {% if song.arranger %}
                  <span style="font-style: italic;">&nbsp;&mdash; Arr. {{ song.arranger }}</span>
                {% endif %}
              </div>
            </li>
          {% else %}
            <li style="text-align: center; color: #aaa; font-style: italic;">Program to be announced</li>
          {% endfor %}
        </ul>
      </div>
      <div id="tab-content-{{ sectionId }}-performers" style="display: none;">
        <div>
          {% for instrument, players in performers %}
            <div style="margin-bottom: 1rem;">
              <div style="font-weight: bold; margin-bottom: 0.25rem;">
                {{ instrument | title }}
              </div>
              <div style="font-size: 0.98rem;">
                {% for player in players %}
                  <span>
                    {{ player.name }}{% if player.gradYear %} <span style="color: #888;">({{ player.gradYear }})</span>{% endif %}
                    {% if not loop.last %}, {% endif %}
                  </span>
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
{% endmacro %}

<!-- Tab JS -->
<script>
function showTab(sectionId, tab) {
  const programBtn = document.getElementById(`tab-${sectionId}-program`);
  const performersBtn = document.getElementById(`tab-${sectionId}-performers`);
  const programContent = document.getElementById(`tab-content-${sectionId}-program`);
  const performersContent = document.getElementById(`tab-content-${sectionId}-performers`);
  if (tab === 'program') {
    programBtn.style.background = '#bfa76a';
    programBtn.style.color = '#fff';
    programBtn.setAttribute('aria-selected', 'true');
    performersBtn.style.background = '#eee';
    performersBtn.style.color = '#333';
    performersBtn.setAttribute('aria-selected', 'false');
    programContent.style.display = '';
    performersContent.style.display = 'none';
  } else {
    performersBtn.style.background = '#bfa76a';
    performersBtn.style.color = '#fff';
    performersBtn.setAttribute('aria-selected', 'true');
    programBtn.style.background = '#eee';
    programBtn.style.color = '#333';
    programBtn.setAttribute('aria-selected', 'false');
    performersContent.style.display = '';
    programContent.style.display = 'none';
  }
}
</script>

<div style="max-width: 1024px; margin: 2rem auto; background: #fff; border-radius: 1rem; box-shadow: 0 2px 16px rgba(0,0,0,0.08); padding: 2.5rem 2rem;">
