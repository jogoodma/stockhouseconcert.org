---
layout: layouts/default.njk
date: Last Modified
---

{# Layout 1: Traditional Symphony Program - Elegant Two-Column #}

<main class="program-layout1">
  <header class="program-header">
    <h1 class="program-title">Concert Program</h1>
    <div class="program-meta">
      <div class="concert-date">{{ concertDate }}</div>
      <div class="concert-time">{{ concertTime }}</div>
      <div class="concert-location">{{ concertLocation }}</div>
    </div>
  </header>

  {% macro ensembleSection(title, director, songs, performers) %}
    <section class="ensemble-section">
      <div class="ensemble-header">
        <h2 class="ensemble-title">{{ title }}</h2>
        <div class="ensemble-director">{{ director }}, <em>Director</em></div>
      </div>

      <div class="program-songs">
        {% for song in songs %}
          <div class="song-entry">
            <div class="song-title">{{ song.title }}</div>
            <div class="song-composer">
              {{ song.composer }}
              {% if song.arranger %}
                <span class="song-arranger">arr. {{ song.arranger }}</span>
              {% endif %}
            </div>
          </div>
        {% else %}
          <div class="program-empty">Program to be announced</div>
        {% endfor %}
      </div>

      <div class="performers-section">
        <h3 class="performers-heading">Performers</h3>
        <div class="performers-columns">
          {% set allPerformers = performers | mergeAllPerformers(songs) %}
          {% for instrument, players in allPerformers %}
            <div class="instrument-group">
              <div class="instrument-name">{{ instrument | upper }}</div>
              {% for player in players %}
                <div class="performer-name">
                  {{ player.name }}{% if player.gradYear %} ({{ player.gradYear }}){% endif %}
                </div>
              {% endfor %}
            </div>
          {% endfor %}
        </div>
      </div>
    </section>
  {% endmacro %}

  {{ ensembleSection(symphonic.title, symphonic.director, symphonic.songs, symphonic.performers) }}

  <div class="intermission">
    <span class="intermission-text">~ Intermission ~</span>
  </div>

  {{ ensembleSection(jazz1.title, jazz1.director, jazz1.songs, jazz1.performers) }}

  {{ ensembleSection(jazz2.title, jazz2.director, jazz2.songs, jazz2.performers) }}

  <section class="ensemble-section">
    <div class="ensemble-header">
      <h2 class="ensemble-title">{{ jazz3.title }}</h2>
    </div>
    <div class="program-songs">
      {% for song in jazz3.songs %}
        <div class="song-entry">
          <div class="song-title">{{ song.title }}</div>
          <div class="song-composer">
            {{ song.composer }}
            {% if song.arranger %}
              <span class="song-arranger">arr. {{ song.arranger }}</span>
            {% endif %}
          </div>
        </div>
      {% else %}
        <div class="program-empty">Program to be announced</div>
      {% endfor %}
    </div>
  </section>
</main>

<style>
