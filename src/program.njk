---
layout: layouts/default.njk
date: Last Modified
permalink: /program/
---

<div class="max-w-2xl mx-auto bg-white/95 rounded-2xl shadow-xl p-8 md:p-12 mt-8 mb-8 border-t-4 border-maroon">
  <h1 class="text-3xl font-extrabold text-gray-900 mb-6 text-center">Concert Program</h1>
  <p class="text-center text-gray-700 mb-8">
    {{concertTime}} &bull; {{ concertDate }} &bull; {{ concertLocation }}
  </p>

  <!-- Symphonic Band Section -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-maroon mb-4 text-center">{{ symphonic.title }}</h2>
    <ul class="space-y-4">
      {% for song in symphonic.songs %}
        <li class="flex flex-col md:flex-row md:justify-between md:items-center border-b border-slate-200 pb-2">
          <span class="font-semibold text-gray-900">{{ song.title }}</span>
          <span class="text-gray-600 italic">{{ song.composer }}</span>
        </li>
      {% else %}
        <li class="text-gray-400 italic">Program to be announced</li>
      {% endfor %}
    </ul>
    <!-- Optionally, add performers here later -->
  </section>

  <!-- Intermission Divider -->
  <div class="my-8 text-center">
    <span class="inline-block px-6 py-2 rounded-full bg-gold text-maroon font-semibold shadow">Intermission</span>
  </div>

  <!-- Jazz Band Section -->
  <section>
    <h2 class="text-2xl font-bold text-maroon mb-4 text-center">{{ jazz.title }}</h2>
    <ul class="space-y-4">
      {% for song in jazz.songs %}
        <li class="flex flex-col md:flex-row md:justify-between md:items-center border-b border-slate-200 pb-2">
          <span class="font-semibold text-gray-900">{{ song.title }}</span>
          <span class="text-gray-600 italic">{{ song.composer }}</span>
        </li>
      {% else %}
        <li class="text-gray-400 italic">Program to be announced</li>
      {% endfor %}
    </ul>
    <!-- Optionally, add performers here later -->
  </section>
</div>

