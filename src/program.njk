    max-width: 8.5in;
    margin: 2rem auto;
    padding: 3rem;
    background: white;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
    font-family: 'Palatino', 'Georgia', serif;
    line-height: 1.6;
  }

  .program-header {
    text-align: center;
    border-bottom: 2px solid #000;
    padding-bottom: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .program-title {
    font-size: 2.5rem;
    font-weight: normal;
    letter-spacing: 0.05em;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
  }

  .program-meta {
    font-size: 1rem;
    line-height: 1.4;
  }

  .concert-date {
    font-weight: bold;
  }

  .ensemble-section {
    margin-bottom: 3rem;
    page-break-inside: avoid;
  }

  .ensemble-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .ensemble-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0 0 0.25rem 0;
    letter-spacing: 0.02em;
  }

  .ensemble-director {
    font-size: 0.95rem;
    font-style: normal;
  }

  .ensemble-director em {
    font-style: italic;
  }

  .program-songs {
    margin-bottom: 2rem;
    padding: 0 2rem;
  }

  .song-entry {
    margin-bottom: 1.25rem;
    text-align: center;
  }

  .song-title {
    font-size: 1.1rem;
    font-weight: normal;
    font-style: italic;
  }

  .song-composer {
    font-size: 0.9rem;
    margin-top: 0.25rem;
  }

  .song-arranger {
    font-size: 0.85rem;
    font-style: italic;
  }

  .program-empty {
    text-align: center;
    font-style: italic;
    color: #666;
  }

  .intermission {
    text-align: center;
    margin: 3rem 0;
    padding: 1rem 0;
    border-top: 1px solid #333;
    border-bottom: 1px solid #333;
  }

  .intermission-text {
    font-size: 1rem;
    font-style: italic;
    letter-spacing: 0.1em;
  }

  .performers-section {
    margin-top: 2rem;
    border-top: 1px solid #ccc;
    padding-top: 1.5rem;
  }

  .performers-heading {
    font-size: 1rem;
    font-weight: bold;
    text-align: center;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .performers-columns {
    column-count: 2;
    column-gap: 2rem;
    font-size: 0.85rem;
  }

  @media (max-width: 600px) {
    .performers-columns {
      column-count: 1;
    }
    .program-layout1 {
      padding: 1.5rem;
    }
    .program-songs {
      padding: 0 0.5rem;
    }
  }

  .instrument-group {
    break-inside: avoid;
    margin-bottom: 1rem;
  }

  .instrument-name {
    font-weight: bold;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }

  .performer-name {
    padding-left: 0.5rem;
    line-height: 1.4;
  }
</style>
