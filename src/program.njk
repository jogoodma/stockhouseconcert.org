<div style="max-width: 1024px; margin: 2rem auto; background: #fff; border-radius: 1rem; box-shadow: 0 2px 16px rgba(0,0,0,0.08); padding: 2.5rem 2rem;">
  <h1 style="font-size: 2.5rem; font-weight: bold; text-align: center; margin-bottom: 0.5rem;">Concert Program</h1>
  <div style="text-align: center; font-size: 1.1rem; margin-bottom: 2rem;">
    {{concertTime}} &bull; {{ concertDate }}<br>
    {{ concertLocation }}
  </div>

  <!-- Symphonic Band Section -->
  <section style="margin-bottom: 2.5rem;">
    <h2 style="font-size: 1.7rem; font-weight: bold; text-align: center; margin-bottom: 0.5rem;">{{ symphonic.title }}</h2>
    <div style="text-align: center; font-style: italic; margin-bottom: 1.5rem;">
      Directed by {{ symphonic.director }}
    </div>
    <ul style="list-style: none; padding: 0; margin: 0;">
      {% for song in symphonic.songs %}
        <li style="margin-bottom: 1.5rem;">
          <div style="font-size: 1.15rem; font-weight: 500; text-align: center;">{{ song.title }}</div>
          <div style="font-size: 1rem; text-align: center; color: #555;">
            {{ song.composer }}
            {% if song.arranger %}
              <span style="font-style: italic;">&nbsp;&mdash; Arr. {{ song.arranger }}</span>
            {% endif %}
          </div>
        </li>
      {% else %}
        <li style="text-align: center; color: #aaa; font-style: italic;">Program to be announced</li>
      {% endfor %}
    </ul>
  </section>

  <hr style="margin: 2.5rem 0; border: none; border-top: 2px solid #bfa76a;">

