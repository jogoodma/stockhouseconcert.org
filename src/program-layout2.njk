{# Layout 2: Playbill-Style Program - Bold and Modern #}

<main class="program-layout2">
  <header class="program-header">
    <div class="header-ornament">◆</div>
    <h1 class="program-title">Concert Program</h1>
    <div class="header-ornament">◆</div>
    <div class="program-meta">
      <div class="meta-line">{{ concertDate }} • {{ concertTime }}</div>
      <div class="meta-line">{{ concertLocation }}</div>
    </div>
  </header>

  {% macro ensembleSection(title, director, songs, performers) %}
    <section class="ensemble-section">
      <div class="section-title-bar">
        <h2 class="ensemble-title">{{ title }}</h2>
      </div>
      <div class="section-director">Conducted by {{ director }}</div>

      <div class="program-and-performers">
        <div class="program-column">
          <h3 class="column-heading">Programme</h3>
          {% for song in songs %}
            <div class="song-block">
              <div class="song-title">{{ song.title }}</div>
              <div class="song-meta">
                <span class="composer-name">{{ song.composer }}</span>
                {% if song.arranger %}
                  <br><span class="arranger-credit">arranged by {{ song.arranger }}</span>
                {% endif %}
              </div>
            </div>
          {% else %}
            <div class="program-empty">Programme to be announced</div>
          {% endfor %}
        </div>

        <div class="performers-column">
          <h3 class="column-heading">Personnel</h3>
          <div class="performers-list">
            {% set allPerformers = performers | mergeAllPerformers(songs) %}
            {% for instrument, players in allPerformers %}
              <div class="instrument-section">
                <div class="instrument-label">{{ instrument }}</div>
                <div class="players-list">
                  {% for player in players %}
                    {{ player.name }}{% if player.gradYear %} ({{ player.gradYear }}){% endif %}{% if not loop.last %},{% endif %}
                  {% endfor %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
  {% endmacro %}

  {{ ensembleSection(symphonic.title, symphonic.director, symphonic.songs, symphonic.performers) }}

  <div class="intermission-break">
    <div class="intermission-line"></div>
    <div class="intermission-label">Intermission</div>
    <div class="intermission-line"></div>
  </div>

  {{ ensembleSection(jazz1.title, jazz1.director, jazz1.songs, jazz1.performers) }}

  {{ ensembleSection(jazz2.title, jazz2.director, jazz2.songs, jazz2.performers) }}

  <section class="ensemble-section">
    <div class="section-title-bar">
      <h2 class="ensemble-title">{{ jazz3.title }}</h2>
    </div>
    <div class="program-column" style="max-width: none;">
      {% for song in jazz3.songs %}
        <div class="song-block">
          <div class="song-title">{{ song.title }}</div>
          <div class="song-meta">
            <span class="composer-name">{{ song.composer }}</span>
            {% if song.arranger %}
              <br><span class="arranger-credit">arranged by {{ song.arranger }}</span>
            {% endif %}
          </div>
        </div>
      {% else %}
        <div class="program-empty">Programme to be announced</div>
      {% endfor %}
    </div>
  </section>
</main>

